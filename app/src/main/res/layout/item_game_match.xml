<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_10dp_gray_stroke">

    <TextView
        android:id="@+id/tv_game_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        tools:text="篮网球-Suncorp超级篮网球"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_home_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.38"
        android:background="@drawable/shape_circle_logo"
        android:text="L"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        tools:text="犹他爵士犹他爵士犹他爵士"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_away_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintLeft_toRightOf="@+id/view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.38"
        android:background="@drawable/shape_circle_logo"
        android:text="L"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_away_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_away_icon"
        app:layout_constraintLeft_toRightOf="@+id/view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        tools:text="犹他爵士犹他爵士犹他爵士"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_home_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_icon"
        android:text="0-0"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view"
        android:layout_width="128dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_game_score"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_24dp_yellow_bg"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_game_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintRight_toLeftOf="@+id/iv_anim"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@color/white"
        tools:text="第一节  00'"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/iv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_game_stage"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintRight_toLeftOf="@+id/iv_live"
        android:src="@drawable/ic_anim_s"
        android:layout_marginLeft="@dimen/dp_10"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/iv_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_anim"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        android:src="@drawable/ic_live_s"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>